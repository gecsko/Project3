<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:padding="4dp">

            <TextView
                android:id="@+id/widget_home_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text="HOME"
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/widget_home_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="@dimen/Score"/>

            <TextView
                android:id="@+id/widget_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/widget_string"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:text="VS"
            android:textSize="@dimen/Score"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/widget_away_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text="AWAY"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/widget_away_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text=""
                android:textSize="@dimen/Score"
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/widget_away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text=""
                android:textSize="12sp"
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
